  start program "/var/vcap/packages/bosh-helpers/monit_debugger service-fabrik-deployment-hooks_ctl '/var/vcap/jobs/service-fabrik-deployment-hooks/bin/service-fabrik-deployment-hooks_ctl start'"
  stop program "/var/vcap/packages/bosh-helpers/monit_debugger service-fabrik-deployment-hooks_ctl '/var/vcap/jobs/service-fabrik-deployment-hooks/bin/service-fabrik-deployment-hooks_ctl stop'"